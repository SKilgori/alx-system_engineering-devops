#!/bin/bash

domain=$1
subdomain=$2

function display_info {
  record=$(dig $subdomain.$domain +short | awk '{print $1}')
  type=$(dig $subdomain.$domain +short | awk '{print $4}')
  echo "The subdomain $subdomain is a $type record and points to $record"
}

if [ -z $subdomain ]; then
  display_info www
  display_info lb-01
  display_info web-01
  display_info web-02
else
  display_info $subdomain
fi
